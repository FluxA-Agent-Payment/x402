# Required for client + facilitator
EVM_PRIVATE_KEY=0x...

# Required for server
EVM_ADDRESS=0x...

# Required for server
FACILITATOR_URL=http://localhost:4022

# Required for client
RESOURCE_SERVER_URL=http://localhost:4021

# Optional for facilitator (demo placeholder)
SETTLEMENT_CONTRACT=0x0000000000000000000000000000000000000001

# Required for facilitator + client (on-chain debit wallet contract)
DEBIT_WALLET_CONTRACT=0x0000000000000000000000000000000000000002

# Required for facilitator (seconds, enforced by debit wallet contract)
WITHDRAW_DELAY_SECONDS=86400

# Optional for facilitator; comma-separated list, defaults to facilitator signer address if omitted
# AUTHORIZED_PROCESSORS=0x...,0x...

# Optional for facilitator settlement mode: "synthetic" (default) or "onchain"
# SETTLEMENT_MODE=synthetic

# Optional logging
# LOG_LEVEL=info
# LOG_FORMAT=text

# Optional for facilitator auto-settlement (batch scheduler)
# AUTO_SETTLE_INTERVAL_SECONDS=15
# AUTO_SETTLE_AFTER_SECONDS=30

# Optional server fallback settlement (0 to disable)
# FALLBACK_SETTLE_INTERVAL_SECONDS=30
# FALLBACK_SETTLE_AFTER_SECONDS=120

# Optional for client (auto deposit into debit wallet)
# AUTO_DEPOSIT=true
# EVM_RPC_URL=https://base-sepolia.g.alchemy.com/v2/...

# Optional for client (skip manual /settle call)
# SKIP_MANUAL_SETTLE=true

# Optional: set per process if you want custom ports
# PORT=4021
